---
// Footer component for Vodafone distributor website
const currentYear = new Date().getFullYear();

const navLinks = [
    { name: "Nosotros", href: "/nosotros" },
    { name: "Nuestro Equipo", href: "/equipo" },
    { name: "Productos", href: "/productos" },
    { name: "Contáctanos", href: "/contacto" },
];

const socialLinks = [
    { name: "Facebook", href: "#", icon: "facebook" },
    { name: "Instagram", href: "#", icon: "instagram" },
    { name: "LinkedIn", href: "#", icon: "linkedin" },
    { name: "Twitter", href: "#", icon: "twitter" },
];
---

<footer class="footer">
    <div class="footer-glow"></div>

    <div class="footer-container">
        <div class="footer-main">
            <div class="footer-brand">
                <a href="/" class="footer-logo">
                    <span class="logo-text">Unfourtel</span>
                    <span class="logo-subtitle">Distribuidor Vodafone</span>
                </a>
                <p class="footer-description">
                    Tu socio de confianza para soluciones de telecomunicaciones.
                    Conectando empresas y personas con la mejor tecnología de
                    Vodafone.
                </p>
            </div>

            <div class="footer-links">
                <h4 class="footer-heading">Enlaces</h4>
                <ul class="footer-nav">
                    {
                        navLinks.map((link) => (
                            <li>
                                <a href={link.href} class="footer-link">
                                    {link.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <div class="footer-contact">
                <h4 class="footer-heading">Contacto</h4>
                <ul class="contact-list">
                    <li class="contact-item">
                        <svg
                            class="contact-icon"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                            ></path>
                        </svg>
                        <span>+34 900 000 000</span>
                    </li>
                    <li class="contact-item">
                        <svg
                            class="contact-icon"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                            ></path>
                            <polyline points="22,6 12,13 2,6"></polyline>
                        </svg>
                        <span>info@unfourtel.com</span>
                    </li>
                    <li class="contact-item">
                        <svg
                            class="contact-icon"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                            ></path>
                            <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                        <span>Madrid, España</span>
                    </li>
                </ul>
            </div>

            <div class="footer-social">
                <h4 class="footer-heading">Síguenos</h4>
                <div class="social-links">
                    <a href="#" class="social-link" aria-label="Facebook">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path
                                d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                            ></path>
                        </svg>
                    </a>
                    <a href="#" class="social-link" aria-label="Instagram">
                        <svg
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <rect
                                x="2"
                                y="2"
                                width="20"
                                height="20"
                                rx="5"
                                ry="5"></rect>
                            <path
                                d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                            ></path>
                            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                        </svg>
                    </a>
                    <a href="#" class="social-link" aria-label="LinkedIn">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path
                                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                            ></path>
                            <rect x="2" y="9" width="4" height="12"></rect>
                            <circle cx="4" cy="4" r="2"></circle>
                        </svg>
                    </a>
                    <a href="#" class="social-link" aria-label="Twitter">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path
                                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                            ></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="footer-bottom-content">
                <p class="copyright">
                    © {currentYear} Unfourtel. Todos los derechos reservados.
                </p>
                <p class="vodafone-note">
                    Distribuidor autorizado de
                    <span class="vodafone-text">Vodafone</span>
                </p>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer {
        position: relative;
        background: linear-gradient(180deg, #f8f9fc 0%, #ffffff 100%);
        padding: 5rem 0 0;
        margin-top: auto;
        overflow: hidden;
    }

    .footer-glow {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        height: 1px;
        background: linear-gradient(90deg, transparent, #e60000, transparent);
    }

    .footer-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .footer-main {
        display: grid;
        grid-template-columns: 2fr 1fr 1.5fr 1fr;
        gap: 4rem;
        padding-bottom: 4rem;
    }

    .footer-brand {
        max-width: 320px;
    }

    .footer-logo {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        gap: 0.15rem;
        margin-bottom: 1.5rem;
    }

    .logo-text {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(
            135deg,
            #e60000 0%,
            #ff4d4d 50%,
            #e60000 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.5px;
    }

    .logo-subtitle {
        font-size: 0.7rem;
        color: var(--text-secondary, #5a5a7a);
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 500;
    }

    .footer-description {
        color: var(--text-secondary, #5a5a7a);
        font-size: 0.95rem;
        line-height: 1.7;
        margin: 0;
    }

    .footer-heading {
        color: var(--text-primary, #1a1a2e);
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        margin: 0 0 1.5rem;
        position: relative;
        padding-bottom: 0.75rem;
    }

    .footer-heading::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 30px;
        height: 2px;
        background: linear-gradient(90deg, #e60000, #ff4d4d);
        border-radius: 2px;
    }

    .footer-nav {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .footer-nav li {
        margin-bottom: 0.75rem;
    }

    .footer-link {
        color: var(--text-secondary, #5a5a7a);
        text-decoration: none;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        position: relative;
    }

    .footer-link:hover {
        color: #e60000;
        padding-left: 8px;
    }

    .contact-list {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--text-secondary, #5a5a7a);
        font-size: 0.95rem;
        margin-bottom: 1rem;
    }

    .contact-icon {
        width: 18px;
        height: 18px;
        color: #e60000;
        flex-shrink: 0;
    }

    .social-links {
        display: flex;
        gap: 0.75rem;
    }

    .social-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 42px;
        height: 42px;
        background: var(--bg-tertiary, #f0f2f8);
        border: 1px solid rgba(0, 0, 0, 0.08);
        border-radius: 10px;
        color: var(--text-secondary, #5a5a7a);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .social-link svg {
        width: 18px;
        height: 18px;
    }

    .social-link:hover {
        background: #e60000;
        border-color: #e60000;
        color: #ffffff;
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(230, 0, 0, 0.3);
    }

    .footer-bottom {
        border-top: 1px solid rgba(0, 0, 0, 0.08);
        padding: 2rem 0;
    }

    .footer-bottom-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .copyright {
        color: var(--text-muted, #8888a8);
        font-size: 0.85rem;
        margin: 0;
    }

    .vodafone-note {
        color: var(--text-muted, #8888a8);
        font-size: 0.85rem;
        margin: 0;
    }

    .vodafone-text {
        color: #e60000;
        font-weight: 600;
    }

    /* Responsive Styles */
    @media (max-width: 1024px) {
        .footer-main {
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
        }

        .footer-brand {
            grid-column: span 2;
            max-width: 100%;
        }
    }

    @media (max-width: 640px) {
        .footer {
            padding: 3rem 0 0;
        }

        .footer-main {
            grid-template-columns: 1fr;
            gap: 2.5rem;
        }

        .footer-brand {
            grid-column: span 1;
        }

        .footer-bottom-content {
            flex-direction: column;
            gap: 0.75rem;
            text-align: center;
        }
    }
</style>
