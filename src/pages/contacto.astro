---
import Layout from "../layouts/Layout.astro";

const contactInfo = [
    {
        icon: "phone",
        title: "Teléfono",
        value: "900 000 000",
        description: "Lunes a Viernes, 9:00 - 20:00",
        link: "tel:+34900000000",
    },
    {
        icon: "email",
        title: "Email",
        value: "info@unfourtel.com",
        description: "Respuesta en menos de 24h",
        link: "mailto:info@unfourtel.com",
    },
    {
        icon: "location",
        title: "Oficina",
        value: "Calle Principal, 123",
        description: "Madrid, España",
        link: "https://maps.google.com",
    },
    {
        icon: "whatsapp",
        title: "WhatsApp",
        value: "+34 600 000 000",
        description: "Chat directo con un asesor",
        link: "https://wa.me/34600000000",
    },
];

const faqs = [
    {
        question: "¿Cuánto tarda la instalación de fibra?",
        answer: "Normalmente la instalación se realiza en un plazo de 3 a 5 días laborables desde la contratación.",
    },
    {
        question: "¿Puedo mantener mi número de teléfono?",
        answer: "Sí, gestionamos la portabilidad de tu número actual sin coste adicional ni interrupciones.",
    },
    {
        question: "¿Hay permanencia en los contratos?",
        answer: "Ofrecemos opciones sin permanencia. Consulta las condiciones específicas de cada tarifa.",
    },
    {
        question: "¿Qué cobertura tiene Vodafone en mi zona?",
        answer: "Podemos verificar la cobertura exacta de fibra y móvil 5G en tu dirección. Contáctanos con tu código postal.",
    },
];
---

<Layout
    title="Contacto | Unfourtel - Distribuidor Vodafone"
    description="Contacta con Unfourtel, tu distribuidor Vodafone de confianza. Asesoramiento personalizado para empresas y particulares."
>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-background">
            <div class="hero-gradient"></div>
        </div>
        <div class="container">
            <div class="hero-content">
                <span class="hero-badge">Contacto</span>
                <h1 class="hero-title">
                    Estamos aquí para
                    <span class="highlight">ayudarte</span>
                </h1>
                <p class="hero-description">
                    ¿Tienes preguntas? Nuestro equipo de expertos está listo
                    para asesorarte y encontrar la mejor solución para ti.
                </p>
            </div>
        </div>
    </section>

    <!-- Contact Info Cards -->
    <section class="contact-info-section">
        <div class="container">
            <div class="contact-grid">
                {
                    contactInfo.map((info) => (
                        <a
                            href={info.link}
                            class="contact-card"
                            target={
                                info.icon === "location" ||
                                info.icon === "whatsapp"
                                    ? "_blank"
                                    : undefined
                            }
                        >
                            <div class="contact-icon">
                                {info.icon === "phone" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
                                    </svg>
                                )}
                                {info.icon === "email" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                                        <polyline points="22,6 12,13 2,6" />
                                    </svg>
                                )}
                                {info.icon === "location" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                                        <circle cx="12" cy="10" r="3" />
                                    </svg>
                                )}
                                {info.icon === "whatsapp" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="currentColor"
                                    >
                                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
                                    </svg>
                                )}
                            </div>
                            <div class="contact-content">
                                <h3 class="contact-title">{info.title}</h3>
                                <span class="contact-value">{info.value}</span>
                                <span class="contact-description">
                                    {info.description}
                                </span>
                            </div>
                            <div class="contact-arrow">
                                <svg
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M5 12h14M12 5l7 7-7 7" />
                                </svg>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Contact Form Section -->
    <section class="form-section">
        <div class="container">
            <div class="form-grid">
                <div class="form-info">
                    <span class="section-label">Formulario de Contacto</span>
                    <h2 class="section-title">Cuéntanos qué necesitas</h2>
                    <p class="section-description">
                        Rellena el formulario y uno de nuestros asesores se
                        pondrá en contacto contigo en menos de 24 horas para
                        ofrecerte la mejor solución.
                    </p>
                    <ul class="benefits-list">
                        <li>
                            <svg
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span
                                >Asesoramiento personalizado y sin compromiso</span
                            >
                        </li>
                        <li>
                            <svg
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span>Respuesta garantizada en 24 horas</span>
                        </li>
                        <li>
                            <svg
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span>Presupuestos adaptados a tus necesidades</span
                            >
                        </li>
                    </ul>
                </div>
                <div class="form-container">
                    <form class="contact-form" id="contactForm">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="name">Nombre *</label>
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    required
                                    placeholder="Tu nombre"
                                />
                            </div>
                            <div class="form-group">
                                <label for="company">Empresa</label>
                                <input
                                    type="text"
                                    id="company"
                                    name="company"
                                    placeholder="Nombre de tu empresa"
                                />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="email">Email *</label>
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    placeholder="tu@email.com"
                                />
                            </div>
                            <div class="form-group">
                                <label for="phone">Teléfono *</label>
                                <input
                                    type="tel"
                                    id="phone"
                                    name="phone"
                                    required
                                    placeholder="+34 600 000 000"
                                />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="interest">Estoy interesado en</label>
                            <select id="interest" name="interest">
                                <option value="">Selecciona una opción</option>
                                <option value="movil">Tarifas Móvil</option>
                                <option value="fibra">Fibra Óptica</option>
                                <option value="fibra-movil"
                                    >Fibra + Móvil</option
                                >
                                <option value="empresas"
                                    >Soluciones Empresas</option
                                >
                                <option value="dispositivos"
                                    >Dispositivos</option
                                >
                                <option value="otro">Otro</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="message">Mensaje</label>
                            <textarea
                                id="message"
                                name="message"
                                rows="4"
                                placeholder="Cuéntanos qué necesitas..."
                            ></textarea>
                        </div>
                        <div class="form-group checkbox-group">
                            <label class="checkbox-label">
                                <input
                                    type="checkbox"
                                    name="privacy"
                                    required
                                />
                                <span class="checkmark"></span>
                                <span
                                    >Acepto la <a href="/privacidad"
                                        >política de privacidad</a
                                    > *</span
                                >
                            </label>
                        </div>
                        <button type="submit" class="submit-btn">
                            Enviar mensaje
                            <svg
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path d="M22 2L11 13"></path>
                                <path d="M22 2l-7 20-4-9-9-4 20-7z"></path>
                            </svg>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section">
        <div class="container">
            <div class="section-header">
                <span class="section-label">Preguntas Frecuentes</span>
                <h2 class="section-title">¿Tienes dudas?</h2>
            </div>
            <div class="faq-grid">
                {
                    faqs.map((faq) => (
                        <div class="faq-card">
                            <h4 class="faq-question">{faq.question}</h4>
                            <p class="faq-answer">{faq.answer}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Map Section -->
    <section class="map-section">
        <div class="container">
            <div class="map-container">
                <div class="map-placeholder">
                    <svg
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                    >
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                        ></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    <span>Mapa de ubicación</span>
                    <p>Calle Principal, 123 - Madrid, España</p>
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Hero Section */
    .hero {
        position: relative;
        padding: 6rem 0 4rem;
        text-align: center;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    .hero-gradient {
        position: absolute;
        top: -50%;
        left: 50%;
        transform: translateX(-50%);
        width: 150%;
        height: 100%;
        background: radial-gradient(
            ellipse at center,
            rgba(230, 0, 0, 0.12) 0%,
            transparent 60%
        );
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .hero-badge {
        display: inline-block;
        padding: 0.5rem 1.25rem;
        background: rgba(230, 0, 0, 0.1);
        border: 1px solid rgba(230, 0, 0, 0.3);
        border-radius: 50px;
        color: #ff4d4d;
        font-size: 0.85rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        margin-bottom: 1.5rem;
    }

    .hero-title {
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 800;
        line-height: 1.15;
        margin-bottom: 1.25rem;
        letter-spacing: -0.5px;
    }

    .highlight {
        background: linear-gradient(135deg, #e60000 0%, #ff4d4d 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-description {
        font-size: 1.15rem;
        color: rgba(255, 255, 255, 0.7);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.7;
    }

    /* Section Common */
    .section-label {
        display: inline-block;
        color: #e60000;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 0.75rem;
    }

    .section-title {
        font-size: clamp(1.75rem, 4vw, 2.5rem);
        font-weight: 700;
        margin-bottom: 1rem;
        letter-spacing: -0.5px;
    }

    .section-description {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.1rem;
        line-height: 1.7;
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    /* Contact Info Cards */
    .contact-info-section {
        padding: 2rem 0 4rem;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
    }

    .contact-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .contact-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(230, 0, 0, 0.2);
        transform: translateY(-4px);
    }

    .contact-icon {
        flex-shrink: 0;
        width: 48px;
        height: 48px;
        background: rgba(230, 0, 0, 0.1);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .contact-icon svg {
        width: 22px;
        height: 22px;
        color: #e60000;
    }

    .contact-content {
        flex: 1;
        min-width: 0;
    }

    .contact-title {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.5);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
    }

    .contact-value {
        display: block;
        font-size: 1rem;
        font-weight: 600;
        color: #fff;
        margin-bottom: 0.15rem;
    }

    .contact-description {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.5);
    }

    .contact-arrow {
        flex-shrink: 0;
        opacity: 0;
        transition: all 0.3s ease;
    }

    .contact-arrow svg {
        width: 18px;
        height: 18px;
        color: #e60000;
    }

    .contact-card:hover .contact-arrow {
        opacity: 1;
    }

    /* Form Section */
    .form-section {
        padding: 5rem 0;
        background: linear-gradient(
            180deg,
            rgba(230, 0, 0, 0.03) 0%,
            transparent 100%
        );
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1.2fr;
        gap: 4rem;
        align-items: start;
    }

    .form-info {
        position: sticky;
        top: 100px;
    }

    .benefits-list {
        list-style: none;
        padding: 0;
        margin: 2rem 0 0;
    }

    .benefits-list li {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 0;
        color: rgba(255, 255, 255, 0.8);
    }

    .benefits-list svg {
        width: 20px;
        height: 20px;
        color: #22c55e;
        flex-shrink: 0;
    }

    .form-container {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 24px;
        padding: 2.5rem;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .form-group label {
        font-size: 0.9rem;
        font-weight: 500;
        color: rgba(255, 255, 255, 0.8);
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        padding: 0.875rem 1rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        color: #fff;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .form-group input::placeholder,
    .form-group textarea::placeholder {
        color: rgba(255, 255, 255, 0.3);
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: rgba(230, 0, 0, 0.5);
        background: rgba(230, 0, 0, 0.05);
    }

    .form-group select {
        cursor: pointer;
    }

    .form-group select option {
        background: #1a1a1a;
    }

    .form-group textarea {
        resize: vertical;
        min-height: 120px;
    }

    .checkbox-group {
        flex-direction: row;
    }

    .checkbox-label {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        cursor: pointer;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .checkbox-label input {
        width: 18px;
        height: 18px;
        accent-color: #e60000;
    }

    .checkbox-label a {
        color: #e60000;
        text-decoration: underline;
    }

    .submit-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, #e60000 0%, #cc0000 100%);
        border: none;
        border-radius: 12px;
        color: #fff;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(230, 0, 0, 0.3);
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(230, 0, 0, 0.4);
    }

    .submit-btn svg {
        width: 18px;
        height: 18px;
    }

    /* FAQ Section */
    .faq-section {
        padding: 5rem 0;
    }

    .faq-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .faq-card {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        padding: 1.75rem;
        transition: all 0.3s ease;
    }

    .faq-card:hover {
        background: rgba(255, 255, 255, 0.04);
    }

    .faq-question {
        font-size: 1.05rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    .faq-answer {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.95rem;
        line-height: 1.6;
        margin: 0;
    }

    /* Map Section */
    .map-section {
        padding: 0 0 5rem;
    }

    .map-container {
        border-radius: 24px;
        overflow: hidden;
    }

    .map-placeholder {
        aspect-ratio: 3/1;
        background: linear-gradient(
            135deg,
            rgba(230, 0, 0, 0.1) 0%,
            rgba(230, 0, 0, 0.02) 100%
        );
        border: 1px solid rgba(230, 0, 0, 0.2);
        border-radius: 24px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .map-placeholder svg {
        width: 48px;
        height: 48px;
        color: rgba(230, 0, 0, 0.4);
    }

    .map-placeholder span {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.9rem;
    }

    .map-placeholder p {
        color: rgba(255, 255, 255, 0.7);
        font-weight: 500;
        margin: 0;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .contact-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .form-grid {
            grid-template-columns: 1fr;
            gap: 3rem;
        }

        .form-info {
            position: static;
            text-align: center;
        }

        .benefits-list {
            display: inline-block;
            text-align: left;
        }
    }

    @media (max-width: 768px) {
        .hero {
            padding: 4rem 0 3rem;
        }

        .contact-grid {
            grid-template-columns: 1fr;
        }

        .form-row {
            grid-template-columns: 1fr;
        }

        .faq-grid {
            grid-template-columns: 1fr;
        }

        .map-placeholder {
            aspect-ratio: 2/1;
        }
    }

