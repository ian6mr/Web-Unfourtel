---
import Layout from "../layouts/Layout.astro";

const contactInfo = [
    {
        icon: "phone",
        title: "Teléfono",
        value: "900 000 000",
        description: "Lunes a Viernes, 9:00 - 20:00",
        link: "tel:+34900000000",
    },
    {
        icon: "email",
        title: "Email",
        value: "info@unfourtel.com",
        description: "Respuesta en menos de 24h",
        link: "mailto:info@unfourtel.com",
    },
    {
        icon: "location",
        title: "Oficina",
        value: "Calle Principal, 123",
        description: "Madrid, España",
        link: "https://maps.google.com",
    },
    {
        icon: "whatsapp",
        title: "WhatsApp",
        value: "+34 600 000 000",
        description: "Chat directo con un asesor",
        link: "https://wa.me/34600000000",
    },
];

const faqs = [
    {
        question: "¿Cuánto tarda la instalación de fibra?",
        answer: "Normalmente la instalación se realiza en un plazo de 3 a 5 días laborables desde la contratación.",
    },
    {
        question: "¿Puedo mantener mi número de teléfono?",
        answer: "Sí, gestionamos la portabilidad de tu número actual sin coste adicional ni interrupciones.",
    },
    {
        question: "¿Hay permanencia en los contratos?",
        answer: "Ofrecemos opciones sin permanencia. Consulta las condiciones específicas de cada tarifa.",
    },
    {
        question: "¿Qué cobertura tiene Vodafone en mi zona?",
        answer: "Podemos verificar la cobertura exacta de fibra y móvil 5G en tu dirección. Contáctanos con tu código postal.",
    },
];
---

<Layout
    title="Contacto | Unfourtel - Distribuidor Vodafone"
    description="Contacta con Unfourtel, tu distribuidor Vodafone de confianza. Asesoramiento personalizado para empresas y particulares."
>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-background">
            <div class="hero-gradient"></div>
        </div>
        <div class="container">
            <div class="hero-content">
                <span class="hero-badge">Contacto</span>
                <h1 class="hero-title">
                    Estamos aquí para
                    <span class="highlight">ayudarte</span>
                </h1>
                <p class="hero-description">
                    ¿Tienes preguntas? Nuestro equipo de expertos está listo
                    para asesorarte y encontrar la mejor solución para ti.
                </p>
            </div>
        </div>
    </section>

    <!-- Contact Info Cards -->
    <section class="contact-info-section">
        <div class="container">
            <div class="contact-grid animate-on-scroll">
                {
                    contactInfo.map((info) => (
                        <a
                            href={info.link}
                            class="contact-card"
                            target={
                                info.icon === "location" ||
                                info.icon === "whatsapp"
                                    ? "_blank"
                                    : undefined
                            }
                        >
                            <div class="contact-icon">
                                {info.icon === "phone" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
                                    </svg>
                                )}
                                {info.icon === "email" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                                        <polyline points="22,6 12,13 2,6" />
                                    </svg>
                                )}
                                {info.icon === "location" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                                        <circle cx="12" cy="10" r="3" />
                                    </svg>
                                )}
                                {info.icon === "whatsapp" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="currentColor"
                                    >
                                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
                                    </svg>
                                )}
                            </div>
                            <div class="contact-content">
                                <h3 class="contact-title">{info.title}</h3>
                                <span class="contact-value">{info.value}</span>
                                <span class="contact-description">
                                    {info.description}
                                </span>
                            </div>
                            <div class="contact-arrow">
                                <svg
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M5 12h14M12 5l7 7-7 7" />
                                </svg>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Contact Form Section -->
    <section class="form-section">
        <div class="container">
            <div class="form-grid">
                <div class="form-info animate-on-scroll">
                    <span class="section-label">Formulario de Contacto</span>
                    <h2 class="section-title">Cuéntanos qué necesitas</h2>
                    <p class="section-description">
                        Rellena el formulario y uno de nuestros asesores se
                        pondrá en contacto contigo en menos de 24 horas para
                        ofrecerte la mejor solución.
                    </p>
                    <ul class="benefits-list">
                        <li>
                            <svg
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span
                                >Asesoramiento personalizado y sin compromiso</span
                            >
                        </li>
                        <li>
                            <svg
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span>Respuesta garantizada en 24 horas</span>
                        </li>
                        <li>
                            <svg
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span>Presupuestos adaptados a tus necesidades</span
                            >
                        </li>
                    </ul>
                </div>
                <div
                    class="form-container animate-on-scroll fade-right delay-2"
                >
                    <form class="contact-form" id="contactForm">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="name">Nombre *</label>
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    required
                                    placeholder="Tu nombre"
                                />
                            </div>
                            <div class="form-group">
                                <label for="company">Empresa</label>
                                <input
                                    type="text"
                                    id="company"
                                    name="company"
                                    placeholder="Nombre de tu empresa"
                                />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="email">Email *</label>
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    placeholder="tu@email.com"
                                />
                            </div>
                            <div class="form-group">
                                <label for="phone">Teléfono *</label>
                                <input
                                    type="tel"
                                    id="phone"
                                    name="phone"
                                    required
                                    placeholder="+34 600 000 000"
                                />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="interest">Estoy interesado en</label>
                            <select id="interest" name="interest">
                                <option value="">Selecciona una opción</option>
                                <option value="movil">Tarifas Móvil</option>
                                <option value="fibra">Fibra Óptica</option>
                                <option value="fibra-movil"
                                    >Fibra + Móvil</option
                                >
                                <option value="empresas"
                                    >Soluciones Empresas</option
                                >
                                <option value="dispositivos"
                                    >Dispositivos</option
                                >
                                <option value="otro">Otro</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="message">Mensaje</label>
                            <textarea
                                id="message"
                                name="message"
                                rows="4"
                                placeholder="Cuéntanos qué necesitas..."
                            ></textarea>
                        </div>
                        <div class="form-group checkbox-group">
                            <label class="checkbox-label">
                                <input
                                    type="checkbox"
                                    name="privacy"
                                    required
                                />
                                <span class="checkmark"></span>
                                <span
                                    >Acepto la <a href="/privacidad"
                                        >política de privacidad</a
                                    > *</span
                                >
                            </label>
                        </div>
                        <button type="submit" class="submit-btn">
                            Enviar mensaje
                            <svg
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path d="M22 2L11 13"></path>
                                <path d="M22 2l-7 20-4-9-9-4 20-7z"></path>
                            </svg>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section">
        <div class="container">
            <div class="section-header animate-on-scroll">
                <span class="section-label">Preguntas Frecuentes</span>
                <h2 class="section-title">¿Tienes dudas?</h2>
            </div>
            <div class="faq-grid animate-on-scroll delay-2">
                {
                    faqs.map((faq) => (
                        <div class="faq-card">
                            <h4 class="faq-question">{faq.question}</h4>
                            <p class="faq-answer">{faq.answer}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Map Section -->
    <section class="map-section">
        <div class="container">
            <div class="map-container animate-on-scroll">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1113.1378149532013!2d-4.761160707929275!3d37.897029746766066!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd6cdfe0e4ee16a5%3A0x624b1ae1970478da!2sUnfourtel%20-%20Distribuidor%20Vodafone%20Empresas!5e0!3m2!1sen!2ses!4v1769526028361!5m2!1sen!2ses"
                    width="600"
                    height="450"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </section>
</Layout>

<script>
    // Simple form handling
    document
        .getElementById("contactForm")
        ?.addEventListener("submit", function (e) {
            e.preventDefault();
            // Here you would typically send the form data to a server
            alert(
                "¡Gracias por contactarnos! Te responderemos en menos de 24 horas.",
            );
            (this as HTMLFormElement).reset();
        });
</script>
