---
import Layout from "../../layouts/Layout.astro";

// Mobile plans data
const plans = [
    {
        name: "Tarifa Mini",
        data: "10GB",
        price: "9,99",
        features: [
            "10GB de datos",
            "Llamadas ilimitadas",
            "SMS ilimitados",
            "Cobertura 4G",
        ],
        popular: false,
    },
    {
        name: "Tarifa Básica",
        data: "25GB",
        price: "14,99",
        features: [
            "25GB de datos",
            "Llamadas ilimitadas",
            "SMS ilimitados",
            "Cobertura 4G/5G",
        ],
        popular: false,
    },
    {
        name: "Tarifa Plus",
        data: "50GB",
        price: "19,99",
        features: [
            "50GB de datos",
            "Llamadas ilimitadas",
            "Roaming UE 15GB",
            "Cobertura 5G",
        ],
        popular: true,
    },
    {
        name: "Tarifa Infinita",
        data: "Ilimitados",
        price: "29,99",
        features: [
            "Datos ilimitados",
            "Llamadas ilimitadas",
            "Roaming UE 30GB",
            "5G Ultra",
        ],
        popular: false,
    },
    {
        name: "Tarifa Familia",
        data: "100GB",
        price: "39,99",
        features: [
            "100GB compartidos",
            "Hasta 4 líneas",
            "Llamadas ilimitadas",
            "5G para todos",
        ],
        popular: false,
    },
    {
        name: "Tarifa Joven",
        data: "40GB",
        price: "15,99",
        features: [
            "40GB de datos",
            "Redes sociales ilimitadas",
            "Menores de 30 años",
            "5G incluido",
        ],
        popular: false,
    },
];
---

<Layout
    title="Tarifas Móvil | Unfourtel - Distribuidor Vodafone"
    description="Descubre nuestras tarifas móvil Vodafone con datos, llamadas ilimitadas y la mejor cobertura 5G."
>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-background">
            <div class="hero-gradient"></div>
        </div>
        <div class="container">
            <nav class="breadcrumb">
                <a href="/productos">Productos</a>
                <span class="separator">/</span>
                <span class="current">Tarifas Móvil</span>
            </nav>
            <div class="hero-content">
                <div class="hero-icon">
                    <svg
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <rect x="5" y="2" width="14" height="20" rx="2" ry="2"
                        ></rect>
                        <line x1="12" y1="18" x2="12.01" y2="18"></line>
                    </svg>
                </div>
                <h1 class="hero-title">Tarifas Móvil</h1>
                <p class="hero-description">
                    Planes adaptados a cada necesidad con la mejor cobertura de
                    red y tecnología 5G.
                </p>
            </div>
        </div>
    </section>

    <!-- Plans Grid -->
    <section class="plans-section">
        <div class="container">
            <div class="plans-grid">
                {
                    plans.map((plan) => (
                        <div
                            class={`plan-card ${plan.popular ? "popular" : ""}`}
                        >
                            {plan.popular && (
                                <span class="plan-badge">Más Popular</span>
                            )}
                            <div class="plan-header">
                                <h3 class="plan-name">{plan.name}</h3>
                                <div class="plan-data">{plan.data}</div>
                            </div>
                            <div class="plan-pricing">
                                <span class="plan-price">{plan.price}</span>
                                <span class="plan-period">€/mes</span>
                            </div>
                            <ul class="plan-features">
                                {plan.features.map((feature) => (
                                    <li>
                                        <svg
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <polyline points="20 6 9 17 4 12" />
                                        </svg>
                                        <span>{feature}</span>
                                    </li>
                                ))}
                            </ul>
                            <a
                                href="/contacto"
                                class={`plan-btn ${plan.popular ? "primary" : ""}`}
                            >
                                Contratar ahora
                            </a>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Info Section -->
    <section class="info-section">
        <div class="container">
            <div class="info-grid">
                <div class="info-card">
                    <div class="info-icon">
                        <svg
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <polyline points="22 4 12 14.01 9 11.01"></polyline>
                        </svg>
                    </div>
                    <h4>Sin permanencia</h4>
                    <p>Cambia o cancela cuando quieras sin penalizaciones.</p>
                </div>
                <div class="info-card">
                    <div class="info-icon">
                        <svg
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"
                            ></path>
                        </svg>
                    </div>
                    <h4>Mejor cobertura</h4>
                    <p>La red móvil más premiada de España con 5G real.</p>
                </div>
                <div class="info-card">
                    <div class="info-icon">
                        <svg
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <h4>Activación inmediata</h4>
                    <p>Tu línea activa en menos de 24 horas.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2>¿Tienes dudas sobre qué tarifa elegir?</h2>
                <p>
                    Nuestros asesores te ayudarán a encontrar el plan perfecto.
                </p>
                <a href="/contacto" class="btn btn-primary">Contactar</a>
            </div>
        </div>
    </section>
</Layout>
