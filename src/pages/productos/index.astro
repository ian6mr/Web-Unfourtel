---
import Layout from "../../layouts/Layout.astro";

// Product categories
const categories = [
    {
        id: "movil",
        name: "Tarifas Móvil",
        description:
            "Planes de datos y llamadas ilimitadas para particulares y empresas.",
        icon: "phone",
        color: "#e60000",
        featured: true,
        productCount: 6,
    },
    {
        id: "fibra",
        name: "Fibra Óptica",
        description:
            "Conexión ultrarrápida para tu hogar o negocio con la mejor cobertura.",
        icon: "wifi",
        color: "#00a0d2",
        featured: true,
        productCount: 4,
    },
    {
        id: "empresas",
        name: "Soluciones Empresas",
        description:
            "Paquetes integrales diseñados para las necesidades de tu negocio.",
        icon: "building",
        color: "#7c3aed",
        featured: true,
        productCount: 5,
    },
    {
        id: "dispositivos",
        name: "Dispositivos",
        description:
            "Smartphones, tablets, routers y accesorios de las mejores marcas.",
        icon: "device",
        color: "#059669",
        featured: false,
        productCount: 12,
    },
];

// Featured products across categories
const featuredProducts = [
    {
        name: "Vodafone One Ilimitada",
        category: "Fibra + Móvil",
        price: "49,99",
        originalPrice: "64,99",
        features: [
            "Fibra 600Mb",
            "Línea móvil ilimitada",
            "TV incluida",
            "Router WiFi 6",
        ],
        badge: "Más Popular",
        link: "/productos/fibra",
    },
    {
        name: "Tarifa Infinita",
        category: "Móvil",
        price: "29,99",
        originalPrice: null,
        features: [
            "Datos ilimitados",
            "Llamadas ilimitadas",
            "5G incluido",
            "Roaming UE",
        ],
        badge: "Mejor Valor",
        link: "/productos/movil",
    },
    {
        name: "Business Total",
        category: "Empresas",
        price: "89,99",
        originalPrice: "119,99",
        features: [
            "10 líneas móviles",
            "Fibra 1Gb simétrica",
            "Centralita virtual",
            "Soporte 24/7",
        ],
        badge: "Empresas",
        link: "/productos/empresas",
    },
];
---

<Layout
    title="Productos | Unfourtel - Distribuidor Vodafone"
    description="Descubre nuestra gama completa de productos Vodafone: tarifas móvil, fibra óptica, soluciones empresariales y dispositivos."
>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-background">
            <div class="hero-gradient"></div>
        </div>
        <div class="container">
            <div class="hero-content">
                <span class="hero-badge">Catálogo de Productos</span>
                <h1 class="hero-title">
                    Soluciones de
                    <span class="highlight">conectividad</span>
                    para todos
                </h1>
                <p class="hero-description">
                    Encuentra el plan perfecto para ti, tu familia o tu empresa.
                    Tecnología Vodafone con el servicio personalizado de
                    Unfourtel.
                </p>
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="categories-section">
        <div class="container">
            <div class="section-header">
                <span class="section-label">Categorías</span>
                <h2 class="section-title">Explora nuestros productos</h2>
            </div>

            <div class="categories-grid">
                {
                    categories.map((category) => (
                        <a
                            href={`/productos/${category.id}`}
                            class="category-card"
                        >
                            <div
                                class="category-icon"
                                style={`--accent-color: ${category.color}`}
                            >
                                {category.icon === "phone" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <rect
                                            x="5"
                                            y="2"
                                            width="14"
                                            height="20"
                                            rx="2"
                                            ry="2"
                                        />
                                        <line
                                            x1="12"
                                            y1="18"
                                            x2="12.01"
                                            y2="18"
                                        />
                                    </svg>
                                )}
                                {category.icon === "wifi" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M5 12.55a11 11 0 0 1 14.08 0" />
                                        <path d="M1.42 9a16 16 0 0 1 21.16 0" />
                                        <path d="M8.53 16.11a6 6 0 0 1 6.95 0" />
                                        <line
                                            x1="12"
                                            y1="20"
                                            x2="12.01"
                                            y2="20"
                                        />
                                    </svg>
                                )}
                                {category.icon === "building" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M3 21h18" />
                                        <path d="M5 21V7l8-4v18" />
                                        <path d="M19 21V11l-6-4" />
                                        <path d="M9 9h1" />
                                        <path d="M9 13h1" />
                                        <path d="M9 17h1" />
                                    </svg>
                                )}
                                {category.icon === "device" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <rect
                                            x="4"
                                            y="4"
                                            width="16"
                                            height="16"
                                            rx="2"
                                            ry="2"
                                        />
                                        <rect
                                            x="9"
                                            y="9"
                                            width="6"
                                            height="6"
                                        />
                                        <line x1="9" y1="1" x2="9" y2="4" />
                                        <line x1="15" y1="1" x2="15" y2="4" />
                                        <line x1="9" y1="20" x2="9" y2="23" />
                                        <line x1="15" y1="20" x2="15" y2="23" />
                                        <line x1="20" y1="9" x2="23" y2="9" />
                                        <line x1="20" y1="14" x2="23" y2="14" />
                                        <line x1="1" y1="9" x2="4" y2="9" />
                                        <line x1="1" y1="14" x2="4" y2="14" />
                                    </svg>
                                )}
                            </div>
                            <div class="category-content">
                                <h3 class="category-name">{category.name}</h3>
                                <p class="category-description">
                                    {category.description}
                                </p>
                                <span class="category-count">
                                    {category.productCount} productos
                                </span>
                            </div>
                            <div class="category-arrow">
                                <svg
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M5 12h14M12 5l7 7-7 7" />
                                </svg>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="featured-section">
        <div class="container">
            <div class="section-header">
                <span class="section-label">Destacados</span>
                <h2 class="section-title">Nuestros productos más populares</h2>
                <p class="section-description">
                    Las ofertas más demandadas por nuestros clientes.
                </p>
            </div>

            <div class="products-grid">
                {
                    featuredProducts.map((product) => (
                        <div class="product-card">
                            {product.badge && (
                                <span class="product-badge">
                                    {product.badge}
                                </span>
                            )}
                            <div class="product-header">
                                <span class="product-category">
                                    {product.category}
                                </span>
                                <h3 class="product-name">{product.name}</h3>
                            </div>
                            <div class="product-pricing">
                                <span class="product-price">
                                    <span class="price-amount">
                                        {product.price}
                                    </span>
                                    <span class="price-period">€/mes</span>
                                </span>
                                {product.originalPrice && (
                                    <span class="product-original-price">
                                        {product.originalPrice}€
                                    </span>
                                )}
                            </div>
                            <ul class="product-features">
                                {product.features.map((feature) => (
                                    <li class="feature-item">
                                        <svg
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <polyline points="20 6 9 17 4 12" />
                                        </svg>
                                        <span>{feature}</span>
                                    </li>
                                ))}
                            </ul>
                            <a href={product.link} class="product-btn">
                                Ver detalles
                                <svg
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M5 12h14M12 5l7 7-7 7" />
                                </svg>
                            </a>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2 class="cta-title">¿Necesitas ayuda para elegir?</h2>
                <p class="cta-description">
                    Nuestros asesores te ayudarán a encontrar el plan perfecto
                    para tus necesidades.
                </p>
                <div class="cta-actions">
                    <a href="/contacto" class="btn btn-primary">
                        Solicitar asesoramiento
                        <svg
                            class="btn-icon"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path d="M5 12h14M12 5l7 7-7 7"></path>
                        </svg>
                    </a>
                    <a href="tel:+34900000000" class="btn btn-secondary">
                        <svg
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                            ></path>
                        </svg>
                        Llamar ahora
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
