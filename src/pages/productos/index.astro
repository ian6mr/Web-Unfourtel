---
import Layout from "../../layouts/Layout.astro";

// Product categories
const categories = [
    {
        id: "movil",
        name: "Tarifas Móvil",
        description:
            "Planes de datos y llamadas ilimitadas para particulares y empresas.",
        icon: "phone",
        color: "#e60000",
        featured: true,
        productCount: 6,
    },
    {
        id: "fibra",
        name: "Fibra Óptica",
        description:
            "Conexión ultrarrápida para tu hogar o negocio con la mejor cobertura.",
        icon: "wifi",
        color: "#00a0d2",
        featured: true,
        productCount: 4,
    },
    {
        id: "empresas",
        name: "Soluciones Empresas",
        description:
            "Paquetes integrales diseñados para las necesidades de tu negocio.",
        icon: "building",
        color: "#7c3aed",
        featured: true,
        productCount: 5,
    },
    {
        id: "dispositivos",
        name: "Dispositivos",
        description:
            "Smartphones, tablets, routers y accesorios de las mejores marcas.",
        icon: "device",
        color: "#059669",
        featured: false,
        productCount: 12,
    },
];

// Featured products across categories
const featuredProducts = [
    {
        name: "Vodafone One Ilimitada",
        category: "Fibra + Móvil",
        price: "49,99",
        originalPrice: "64,99",
        features: [
            "Fibra 600Mb",
            "Línea móvil ilimitada",
            "TV incluida",
            "Router WiFi 6",
        ],
        badge: "Más Popular",
        link: "/productos/fibra",
    },
    {
        name: "Tarifa Infinita",
        category: "Móvil",
        price: "29,99",
        originalPrice: null,
        features: [
            "Datos ilimitados",
            "Llamadas ilimitadas",
            "5G incluido",
            "Roaming UE",
        ],
        badge: "Mejor Valor",
        link: "/productos/movil",
    },
    {
        name: "Business Total",
        category: "Empresas",
        price: "89,99",
        originalPrice: "119,99",
        features: [
            "10 líneas móviles",
            "Fibra 1Gb simétrica",
            "Centralita virtual",
            "Soporte 24/7",
        ],
        badge: "Empresas",
        link: "/productos/empresas",
    },
];
---

<Layout
    title="Productos | Unfourtel - Distribuidor Vodafone"
    description="Descubre nuestra gama completa de productos Vodafone: tarifas móvil, fibra óptica, soluciones empresariales y dispositivos."
>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-background">
            <div class="hero-gradient"></div>
        </div>
        <div class="container">
            <div class="hero-content">
                <span class="hero-badge">Catálogo de Productos</span>
                <h1 class="hero-title">
                    Soluciones de
                    <span class="highlight">conectividad</span>
                    para todos
                </h1>
                <p class="hero-description">
                    Encuentra el plan perfecto para ti, tu familia o tu empresa.
                    Tecnología Vodafone con el servicio personalizado de
                    Unfourtel.
                </p>
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="categories-section">
        <div class="container">
            <div class="section-header">
                <span class="section-label">Categorías</span>
                <h2 class="section-title">Explora nuestros productos</h2>
            </div>

            <div class="categories-grid">
                {
                    categories.map((category) => (
                        <a
                            href={`/productos/${category.id}`}
                            class="category-card"
                        >
                            <div
                                class="category-icon"
                                style={`--accent-color: ${category.color}`}
                            >
                                {category.icon === "phone" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <rect
                                            x="5"
                                            y="2"
                                            width="14"
                                            height="20"
                                            rx="2"
                                            ry="2"
                                        />
                                        <line
                                            x1="12"
                                            y1="18"
                                            x2="12.01"
                                            y2="18"
                                        />
                                    </svg>
                                )}
                                {category.icon === "wifi" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M5 12.55a11 11 0 0 1 14.08 0" />
                                        <path d="M1.42 9a16 16 0 0 1 21.16 0" />
                                        <path d="M8.53 16.11a6 6 0 0 1 6.95 0" />
                                        <line
                                            x1="12"
                                            y1="20"
                                            x2="12.01"
                                            y2="20"
                                        />
                                    </svg>
                                )}
                                {category.icon === "building" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M3 21h18" />
                                        <path d="M5 21V7l8-4v18" />
                                        <path d="M19 21V11l-6-4" />
                                        <path d="M9 9h1" />
                                        <path d="M9 13h1" />
                                        <path d="M9 17h1" />
                                    </svg>
                                )}
                                {category.icon === "device" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <rect
                                            x="4"
                                            y="4"
                                            width="16"
                                            height="16"
                                            rx="2"
                                            ry="2"
                                        />
                                        <rect
                                            x="9"
                                            y="9"
                                            width="6"
                                            height="6"
                                        />
                                        <line x1="9" y1="1" x2="9" y2="4" />
                                        <line x1="15" y1="1" x2="15" y2="4" />
                                        <line x1="9" y1="20" x2="9" y2="23" />
                                        <line x1="15" y1="20" x2="15" y2="23" />
                                        <line x1="20" y1="9" x2="23" y2="9" />
                                        <line x1="20" y1="14" x2="23" y2="14" />
                                        <line x1="1" y1="9" x2="4" y2="9" />
                                        <line x1="1" y1="14" x2="4" y2="14" />
                                    </svg>
                                )}
                            </div>
                            <div class="category-content">
                                <h3 class="category-name">{category.name}</h3>
                                <p class="category-description">
                                    {category.description}
                                </p>
                                <span class="category-count">
                                    {category.productCount} productos
                                </span>
                            </div>
                            <div class="category-arrow">
                                <svg
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M5 12h14M12 5l7 7-7 7" />
                                </svg>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="featured-section">
        <div class="container">
            <div class="section-header">
                <span class="section-label">Destacados</span>
                <h2 class="section-title">Nuestros productos más populares</h2>
                <p class="section-description">
                    Las ofertas más demandadas por nuestros clientes.
                </p>
            </div>

            <div class="products-grid">
                {
                    featuredProducts.map((product) => (
                        <div class="product-card">
                            {product.badge && (
                                <span class="product-badge">
                                    {product.badge}
                                </span>
                            )}
                            <div class="product-header">
                                <span class="product-category">
                                    {product.category}
                                </span>
                                <h3 class="product-name">{product.name}</h3>
                            </div>
                            <div class="product-pricing">
                                <span class="product-price">
                                    <span class="price-amount">
                                        {product.price}
                                    </span>
                                    <span class="price-period">€/mes</span>
                                </span>
                                {product.originalPrice && (
                                    <span class="product-original-price">
                                        {product.originalPrice}€
                                    </span>
                                )}
                            </div>
                            <ul class="product-features">
                                {product.features.map((feature) => (
                                    <li class="feature-item">
                                        <svg
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <polyline points="20 6 9 17 4 12" />
                                        </svg>
                                        <span>{feature}</span>
                                    </li>
                                ))}
                            </ul>
                            <a href={product.link} class="product-btn">
                                Ver detalles
                                <svg
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M5 12h14M12 5l7 7-7 7" />
                                </svg>
                            </a>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2 class="cta-title">¿Necesitas ayuda para elegir?</h2>
                <p class="cta-description">
                    Nuestros asesores te ayudarán a encontrar el plan perfecto
                    para tus necesidades.
                </p>
                <div class="cta-actions">
                    <a href="/contacto" class="btn btn-primary">
                        Solicitar asesoramiento
                        <svg
                            class="btn-icon"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path d="M5 12h14M12 5l7 7-7 7"></path>
                        </svg>
                    </a>
                    <a href="tel:+34900000000" class="btn btn-secondary">
                        <svg
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                            ></path>
                        </svg>
                        Llamar ahora
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Hero Section */
    .hero {
        position: relative;
        padding: 6rem 0 4rem;
        text-align: center;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    .hero-gradient {
        position: absolute;
        top: -50%;
        left: 50%;
        transform: translateX(-50%);
        width: 150%;
        height: 100%;
        background: radial-gradient(
            ellipse at center,
            rgba(230, 0, 0, 0.12) 0%,
            transparent 60%
        );
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .hero-badge {
        display: inline-block;
        padding: 0.5rem 1.25rem;
        background: rgba(230, 0, 0, 0.1);
        border: 1px solid rgba(230, 0, 0, 0.3);
        border-radius: 50px;
        color: #ff4d4d;
        font-size: 0.85rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        margin-bottom: 1.5rem;
    }

    .hero-title {
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 800;
        line-height: 1.15;
        margin-bottom: 1.25rem;
        letter-spacing: -0.5px;
    }

    .highlight {
        background: linear-gradient(135deg, #e60000 0%, #ff4d4d 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-description {
        font-size: 1.15rem;
        color: rgba(255, 255, 255, 0.7);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.7;
    }

    /* Section Common Styles */
    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-label {
        display: inline-block;
        color: #e60000;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 0.75rem;
    }

    .section-title {
        font-size: clamp(1.75rem, 4vw, 2.5rem);
        font-weight: 700;
        margin-bottom: 1rem;
        letter-spacing: -0.5px;
    }

    .section-description {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.1rem;
        max-width: 600px;
        margin: 0 auto;
    }

    /* Categories Section */
    .categories-section {
        padding: 4rem 0;
    }

    .categories-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .category-card {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 1.75rem 2rem;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .category-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.1);
        transform: translateY(-4px);
    }

    .category-icon {
        flex-shrink: 0;
        width: 64px;
        height: 64px;
        background: linear-gradient(
            135deg,
            color-mix(in srgb, var(--accent-color) 20%, transparent),
            color-mix(in srgb, var(--accent-color) 5%, transparent)
        );
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .category-icon svg {
        width: 28px;
        height: 28px;
        color: var(--accent-color);
    }

    .category-content {
        flex: 1;
    }

    .category-name {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.4rem;
        color: #fff;
    }

    .category-description {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
        line-height: 1.5;
        margin-bottom: 0.5rem;
    }

    .category-count {
        color: rgba(255, 255, 255, 0.4);
        font-size: 0.8rem;
    }

    .category-arrow {
        flex-shrink: 0;
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .category-arrow svg {
        width: 20px;
        height: 20px;
        color: rgba(255, 255, 255, 0.5);
        transition: all 0.3s ease;
    }

    .category-card:hover .category-arrow {
        background: rgba(230, 0, 0, 0.2);
    }

    .category-card:hover .category-arrow svg {
        color: #e60000;
        transform: translateX(3px);
    }

    /* Featured Products */
    .featured-section {
        padding: 5rem 0;
        background: linear-gradient(
            180deg,
            rgba(230, 0, 0, 0.03) 0%,
            transparent 100%
        );
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }

    .product-card {
        position: relative;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 24px;
        padding: 2rem;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .product-card:hover {
        background: rgba(255, 255, 255, 0.04);
        border-color: rgba(230, 0, 0, 0.2);
        transform: translateY(-4px);
    }

    .product-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        padding: 0.35rem 0.75rem;
        background: linear-gradient(135deg, #e60000 0%, #cc0000 100%);
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 600;
        color: #fff;
    }

    .product-header {
        margin-bottom: 1.5rem;
    }

    .product-category {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .product-name {
        font-size: 1.35rem;
        font-weight: 700;
        margin-top: 0.5rem;
    }

    .product-pricing {
        display: flex;
        align-items: baseline;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .product-price {
        display: flex;
        align-items: baseline;
        gap: 0.25rem;
    }

    .price-amount {
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #e60000 0%, #ff4d4d 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .price-period {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1rem;
    }

    .product-original-price {
        color: rgba(255, 255, 255, 0.4);
        font-size: 1.1rem;
        text-decoration: line-through;
    }

    .product-features {
        list-style: none;
        padding: 0;
        margin: 0 0 2rem;
        flex: 1;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.5rem 0;
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.95rem;
    }

    .feature-item svg {
        width: 18px;
        height: 18px;
        color: #22c55e;
        flex-shrink: 0;
    }

    .product-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1rem;
        background: rgba(230, 0, 0, 0.1);
        border: 1px solid rgba(230, 0, 0, 0.2);
        border-radius: 12px;
        color: #fff;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .product-btn svg {
        width: 18px;
        height: 18px;
        transition: transform 0.3s ease;
    }

    .product-btn:hover {
        background: rgba(230, 0, 0, 0.2);
        border-color: rgba(230, 0, 0, 0.4);
    }

    .product-btn:hover svg {
        transform: translateX(4px);
    }

    /* CTA Section */
    .cta-section {
        padding: 5rem 0;
    }

    .cta-content {
        text-align: center;
        padding: 4rem;
        background: linear-gradient(
            135deg,
            rgba(230, 0, 0, 0.1) 0%,
            rgba(230, 0, 0, 0.02) 100%
        );
        border: 1px solid rgba(230, 0, 0, 0.2);
        border-radius: 24px;
    }

    .cta-title {
        font-size: clamp(1.5rem, 3vw, 2rem);
        font-weight: 700;
        margin-bottom: 0.75rem;
    }

    .cta-description {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .cta-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        text-decoration: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #e60000 0%, #cc0000 100%);
        color: #ffffff;
        box-shadow: 0 4px 20px rgba(230, 0, 0, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(230, 0, 0, 0.4);
    }

    .btn-secondary {
        background: rgba(255, 255, 255, 0.05);
        color: #ffffff;
        border: 1px solid rgba(255, 255, 255, 0.15);
    }

    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.3);
    }

    .btn-secondary svg {
        width: 18px;
        height: 18px;
    }

    .btn-icon {
        width: 18px;
        height: 18px;
        transition: transform 0.3s ease;
    }

    .btn-primary:hover .btn-icon {
        transform: translateX(4px);
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .categories-grid {
            grid-template-columns: 1fr;
        }

        .products-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .hero {
            padding: 4rem 0 3rem;
        }

        .products-grid {
            grid-template-columns: 1fr;
        }

        .cta-content {
            padding: 2.5rem 1.5rem;
        }
    }

    @media (max-width: 640px) {
        .container {
            padding: 0 1.5rem;
        }

        .category-card {
            flex-direction: column;
            text-align: center;
        }

        .category-arrow {
            display: none;
        }
    }
</style>
