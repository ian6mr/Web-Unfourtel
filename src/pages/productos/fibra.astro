---
import Layout from "../../layouts/Layout.astro";

// Fiber plans data
const plans = [
    {
        name: "Fibra 300",
        speed: "300Mb",
        price: "29,99",
        features: [
            "300Mb simétricos",
            "Router WiFi 5",
            "Instalación gratuita",
            "Sin permanencia",
        ],
        popular: false,
    },
    {
        name: "Fibra 600",
        speed: "600Mb",
        price: "34,99",
        features: [
            "600Mb simétricos",
            "Router WiFi 6",
            "Instalación gratuita",
            "Soporte prioritario",
        ],
        popular: true,
    },
    {
        name: "Fibra 1Gb",
        speed: "1Gb",
        price: "44,99",
        features: [
            "1Gb simétrico",
            "Router WiFi 6E",
            "Instalación express",
            "IP fija opcional",
        ],
        popular: false,
    },
    {
        name: "Fibra 2.5Gb",
        speed: "2.5Gb",
        price: "59,99",
        features: [
            "2.5Gb simétricos",
            "Router última gen",
            "Mesh WiFi incluido",
            "Soporte premium 24/7",
        ],
        popular: false,
    },
];

// Bundles (Fibra + Móvil)
const bundles = [
    {
        name: "Vodafone One Esencial",
        fiber: "300Mb",
        mobile: "25GB",
        price: "44,99",
        features: [
            "Fibra 300Mb",
            "1 línea móvil 25GB",
            "Llamadas ilimitadas",
            "Router WiFi 5",
        ],
    },
    {
        name: "Vodafone One Ilimitada",
        fiber: "600Mb",
        mobile: "Ilimitados",
        price: "54,99",
        features: [
            "Fibra 600Mb",
            "Datos móvil ilimitados",
            "TV esencial incluida",
            "Router WiFi 6",
        ],
        popular: true,
    },
    {
        name: "Vodafone One Total",
        fiber: "1Gb",
        mobile: "Ilimitados x2",
        price: "74,99",
        features: [
            "Fibra 1Gb",
            "2 líneas ilimitadas",
            "TV Total incluida",
            "Todo el fútbol",
        ],
    },
];
---

<Layout
    title="Fibra Óptica | Unfourtel - Distribuidor Vodafone"
    description="Fibra óptica ultrarrápida de Vodafone. Conexión simétrica de hasta 2.5Gb con la mejor tecnología WiFi."
>
    <!-- Hero Section -->
    <section class="hero hero--fibra">
        <div class="hero-background">
            <div class="hero-gradient"></div>
        </div>
        <div class="container">
            <nav class="breadcrumb">
                <a href="/productos">Productos</a>
                <span class="separator">/</span>
                <span class="current">Fibra Óptica</span>
            </nav>
            <div class="hero-content">
                <div class="hero-icon">
                    <svg
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path d="M5 12.55a11 11 0 0 1 14.08 0"></path>
                        <path d="M1.42 9a16 16 0 0 1 21.16 0"></path>
                        <path d="M8.53 16.11a6 6 0 0 1 6.95 0"></path>
                        <line x1="12" y1="20" x2="12.01" y2="20"></line>
                    </svg>
                </div>
                <h1 class="hero-title">Fibra Óptica</h1>
                <p class="hero-description">
                    Conexión ultrarrápida y estable para tu hogar o negocio con
                    la mejor tecnología WiFi.
                </p>
            </div>
        </div>
    </section>

    <!-- Fiber Only Plans -->
    <section class="plans-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Solo Fibra</h2>
                <p class="section-description">
                    Conexión de alta velocidad para tu hogar.
                </p>
            </div>
            <div class="plans-grid plans-grid--4col">
                {
                    plans.map((plan) => (
                        <div
                            class={`plan-card ${plan.popular ? "popular" : ""}`}
                        >
                            {plan.popular && (
                                <span class="plan-badge">Recomendado</span>
                            )}
                            <div class="plan-header">
                                <h3 class="plan-name">{plan.name}</h3>
                                <div class="plan-speed">{plan.speed}</div>
                            </div>
                            <div class="plan-pricing">
                                <span class="plan-price">{plan.price}</span>
                                <span class="plan-period">€/mes</span>
                            </div>
                            <ul class="plan-features">
                                {plan.features.map((feature) => (
                                    <li>
                                        <svg
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <polyline points="20 6 9 17 4 12" />
                                        </svg>
                                        <span>{feature}</span>
                                    </li>
                                ))}
                            </ul>
                            <a
                                href="/contacto"
                                class={`plan-btn ${plan.popular ? "primary" : ""}`}
                            >
                                Contratar
                            </a>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Bundles Section -->
    <section class="bundles-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Fibra + Móvil</h2>
                <p class="section-description">
                    Los mejores paquetes con todo incluido.
                </p>
            </div>
            <div class="bundles-grid">
                {
                    bundles.map((bundle) => (
                        <div
                            class={`bundle-card ${bundle.popular ? "popular" : ""}`}
                        >
                            {bundle.popular && (
                                <span class="bundle-badge">Más Popular</span>
                            )}
                            <div class="bundle-header">
                                <h3 class="bundle-name">{bundle.name}</h3>
                                <div class="bundle-specs">
                                    <span class="spec">
                                        <svg
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <path d="M5 12.55a11 11 0 0 1 14.08 0" />
                                            <line
                                                x1="12"
                                                y1="20"
                                                x2="12.01"
                                                y2="20"
                                            />
                                        </svg>
                                        {bundle.fiber}
                                    </span>
                                    <span class="spec-divider">+</span>
                                    <span class="spec">
                                        <svg
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <rect
                                                x="5"
                                                y="2"
                                                width="14"
                                                height="20"
                                                rx="2"
                                            />
                                            <line
                                                x1="12"
                                                y1="18"
                                                x2="12.01"
                                                y2="18"
                                            />
                                        </svg>
                                        {bundle.mobile}
                                    </span>
                                </div>
                            </div>
                            <div class="bundle-pricing">
                                <span class="bundle-price">{bundle.price}</span>
                                <span class="bundle-period">€/mes</span>
                            </div>
                            <ul class="bundle-features">
                                {bundle.features.map((feature) => (
                                    <li>
                                        <svg
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <polyline points="20 6 9 17 4 12" />
                                        </svg>
                                        <span>{feature}</span>
                                    </li>
                                ))}
                            </ul>
                            <a
                                href="/contacto"
                                class={`bundle-btn ${bundle.popular ? "primary" : ""}`}
                            >
                                Contratar ahora
                            </a>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2>¿No encuentras lo que buscas?</h2>
                <p>Creamos paquetes personalizados para tus necesidades.</p>
                <a href="/contacto" class="btn btn-primary"
                    >Solicitar presupuesto</a
                >
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Fibra-specific overrides for blue theme */
    .plans-grid--4col {
        grid-template-columns: repeat(4, 1fr);
    }

    @media (max-width: 1024px) {
        .plans-grid--4col {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .plans-grid--4col {
            grid-template-columns: 1fr;
        }
    }
</style>
