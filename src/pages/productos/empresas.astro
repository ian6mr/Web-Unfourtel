---
import Layout from "../../layouts/Layout.astro";

// Business solutions
const solutions = [
    {
        name: "Pyme Conecta",
        subtitle: "Para pequeñas empresas",
        price: "59,99",
        features: [
            "Fibra 600Mb simétrica",
            "3 líneas móviles (30GB cada una)",
            "Llamadas ilimitadas",
            "Centralita básica",
            "Soporte en horario laboral",
        ],
        popular: false,
    },
    {
        name: "Business Plus",
        subtitle: "Para empresas en crecimiento",
        price: "99,99",
        features: [
            "Fibra 1Gb simétrica",
            "5 líneas móviles ilimitadas",
            "Centralita virtual completa",
            "IP fija incluida",
            "Soporte prioritario 24/7",
            "Microsoft 365 Business Basic",
        ],
        popular: true,
    },
    {
        name: "Enterprise Total",
        subtitle: "Para grandes empresas",
        price: "A medida",
        features: [
            "Fibra dedicada hasta 10Gb",
            "Líneas móviles ilimitadas",
            "Centralita avanzada + CRM",
            "VPN corporativa",
            "Gestor de cuenta dedicado",
            "SLA garantizado 99.9%",
        ],
        popular: false,
    },
];

// Additional services
const services = [
    {
        name: "Centralita Virtual",
        description:
            "Sistema telefónico profesional en la nube con todas las funciones que necesita tu empresa.",
        icon: "phone-call",
    },
    {
        name: "Microsoft 365",
        description:
            "Suite completa de productividad: Outlook, Teams, Word, Excel y más para tu equipo.",
        icon: "cloud",
    },
    {
        name: "Seguridad Empresarial",
        description:
            "Protección avanzada contra amenazas, backup en la nube y recuperación de datos.",
        icon: "shield",
    },
    {
        name: "IoT Empresarial",
        description:
            "Conectividad M2M para dispositivos, sensores y maquinaria industrial.",
        icon: "cpu",
    },
];
---

<Layout
    title="Soluciones Empresas | Unfourtel - Distribuidor Vodafone"
    description="Soluciones integrales de telecomunicaciones para empresas. Fibra, móvil, centralita virtual y servicios cloud."
>
    <!-- Hero Section -->
    <section class="hero hero--empresas">
        <div class="hero-background">
            <div class="hero-gradient"></div>
        </div>
        <div class="container">
            <nav class="breadcrumb">
                <a href="/productos">Productos</a>
                <span class="separator">/</span>
                <span class="current">Soluciones Empresas</span>
            </nav>
            <div class="hero-content">
                <div class="hero-icon">
                    <svg
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path d="M3 21h18"></path>
                        <path d="M5 21V7l8-4v18"></path>
                        <path d="M19 21V11l-6-4"></path>
                        <path d="M9 9h1"></path>
                        <path d="M9 13h1"></path>
                        <path d="M9 17h1"></path>
                    </svg>
                </div>
                <h1 class="hero-title">Soluciones Empresas</h1>
                <p class="hero-description">
                    Paquetes integrales diseñados para impulsar la productividad
                    de tu negocio.
                </p>
            </div>
        </div>
    </section>

    <!-- Business Solutions -->
    <section class="solutions-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Paquetes para Empresas</h2>
                <p class="section-description">
                    Elige el plan que mejor se adapte al tamaño de tu empresa.
                </p>
            </div>
            <div class="solutions-grid">
                {
                    solutions.map((solution) => (
                        <div
                            class={`solution-card ${solution.popular ? "popular" : ""}`}
                        >
                            {solution.popular && (
                                <span class="solution-badge">Más Popular</span>
                            )}
                            <div class="solution-header">
                                <span class="solution-subtitle">
                                    {solution.subtitle}
                                </span>
                                <h3 class="solution-name">{solution.name}</h3>
                            </div>
                            <div class="solution-pricing">
                                {solution.price === "A medida" ? (
                                    <span class="solution-price custom">
                                        {solution.price}
                                    </span>
                                ) : (
                                    <>
                                        <span class="solution-price">
                                            {solution.price}
                                        </span>
                                        <span class="solution-period">
                                            €/mes
                                        </span>
                                    </>
                                )}
                            </div>
                            <ul class="solution-features">
                                {solution.features.map((feature) => (
                                    <li>
                                        <svg
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <polyline points="20 6 9 17 4 12" />
                                        </svg>
                                        <span>{feature}</span>
                                    </li>
                                ))}
                            </ul>
                            <a
                                href="/contacto"
                                class={`solution-btn ${solution.popular ? "primary" : ""}`}
                            >
                                {solution.price === "A medida"
                                    ? "Solicitar presupuesto"
                                    : "Contratar"}
                            </a>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Additional Services -->
    <section class="services-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Servicios Adicionales</h2>
                <p class="section-description">
                    Complementa tu paquete con servicios especializados.
                </p>
            </div>
            <div class="services-grid">
                {
                    services.map((service) => (
                        <div class="service-card">
                            <div class="service-icon">
                                {service.icon === "phone-call" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
                                        <path d="M14.05 2a9 9 0 0 1 8 7.94" />
                                        <path d="M14.05 6A5 5 0 0 1 18 10" />
                                    </svg>
                                )}
                                {service.icon === "cloud" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z" />
                                    </svg>
                                )}
                                {service.icon === "shield" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
                                        <path d="M9 12l2 2 4-4" />
                                    </svg>
                                )}
                                {service.icon === "cpu" && (
                                    <svg
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <rect
                                            x="4"
                                            y="4"
                                            width="16"
                                            height="16"
                                            rx="2"
                                            ry="2"
                                        />
                                        <rect
                                            x="9"
                                            y="9"
                                            width="6"
                                            height="6"
                                        />
                                        <line x1="9" y1="1" x2="9" y2="4" />
                                        <line x1="15" y1="1" x2="15" y2="4" />
                                        <line x1="9" y1="20" x2="9" y2="23" />
                                        <line x1="15" y1="20" x2="15" y2="23" />
                                        <line x1="20" y1="9" x2="23" y2="9" />
                                        <line x1="20" y1="14" x2="23" y2="14" />
                                        <line x1="1" y1="9" x2="4" y2="9" />
                                        <line x1="1" y1="14" x2="4" y2="14" />
                                    </svg>
                                )}
                            </div>
                            <h4 class="service-name">{service.name}</h4>
                            <p class="service-description">
                                {service.description}
                            </p>
                            <a href="/contacto" class="service-link">
                                Más información
                                <svg
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M5 12h14M12 5l7 7-7 7" />
                                </svg>
                            </a>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2>¿Necesitas una solución a medida?</h2>
                <p>
                    Nuestros expertos en telecomunicaciones empresariales
                    diseñarán un paquete personalizado para tu empresa.
                </p>
                <div class="cta-actions">
                    <a href="/contacto" class="btn btn-primary"
                        >Solicitar consultoría gratuita</a
                    >
                    <a href="tel:+34900000000" class="btn btn-secondary">
                        <svg
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"
                            ></path>
                        </svg>
                        Llamar
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
