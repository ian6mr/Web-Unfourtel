---

<Layout title="Unfourtel | Distribuidor Vodafone">
	<!-- Hero Section -->
	<section class="hero">
		<div class="hero-background">
			<div class="hero-gradient"></div>
			<div class="hero-grid"></div>
		</div>

		<div class="hero-content">
			<span class="hero-badge">Distribuidor Autorizado Vodafone</span>
			<h1 class="hero-title">
				Conectamos tu
				<span class="highlight">negocio</span>
				con el futuro
			</h1>
			<p class="hero-description">
				Soluciones de telecomunicaciones a medida para empresas y
				particulares. Descubre la mejor tecnología de Vodafone con el
				servicio personalizado que mereces.
			</p>
			<div class="hero-actions">
				<a href="/productos" class="btn btn-primary">
					Ver Productos
					<svg
						class="btn-icon"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
					>
						<path d="M5 12h14M12 5l7 7-7 7"></path>
					</svg>
				</a>
				<a href="/contacto" class="btn btn-secondary">Contáctanos</a>
			</div>
		</div>
	</section>

	<!-- Clients Section -->
	<section class="clients-section">
		<div class="container">
			<div class="section-header animate-on-scroll">
				<span class="section-label">Confían en Nosotros</span>
				<h2 class="section-title">Clientes que nos avalan</h2>
				<p class="section-description">
					Empresas de todos los sectores que han elegido Unfourtel
					como su partner tecnológico.
				</p>
			</div>

			<div class="clients-grid animate-on-scroll delay-2">
				{
					clients.map((client) => (
						<div class="client-card">
							<div class="client-logo">
								<span class="client-initial">
									{client.name.charAt(0)}
								</span>
							</div>
							<div class="client-info">
								<span class="client-name">{client.name}</span>
								<span class="client-industry">
									{client.industry}
								</span>
							</div>
						</div>
					))
				}
			</div>
		</div>
	</section>

	<!-- Reviews Section -->
	<section class="reviews-section">
		<div class="container">
			<div class="section-header animate-on-scroll">
				<div class="google-badge">
					<svg class="google-icon" viewBox="0 0 24 24">
						<path
							fill="#4285F4"
							d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
						></path>
						<path
							fill="#34A853"
							d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
						></path>
						<path
							fill="#FBBC05"
							d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
						></path>
						<path
							fill="#EA4335"
							d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
						></path>
					</svg>
					<span>Reseñas de Google</span>
				</div>
				<h2 class="section-title">Lo que dicen nuestros clientes</h2>
				<div class="rating-summary">
					<div class="stars">
						{
							[1, 2, 3, 4, 5].map(() => (
								<svg
									class="star"
									viewBox="0 0 24 24"
									fill="currentColor"
								>
									<polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
								</svg>
							))
						}
					</div>
					<span class="rating-text"
						>5.0 basado en reseñas de Google</span
					>
				</div>
			</div>

			<div class="reviews-carousel-wrapper animate-on-scroll delay-2">
				<button
					class="carousel-btn carousel-btn-prev"
					aria-label="Anterior"
				>
					<svg
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
					>
						<path d="M15 18l-6-6 6-6"></path>
					</svg>
				</button>

				<div class="reviews-carousel">
					<div class="reviews-track">
						{
							reviews.map((review) => (
								<div class="review-card">
									<div class="review-header">
										<div class="reviewer-avatar">
											{review.name.charAt(0)}
										</div>
										<div class="reviewer-info">
											<span class="reviewer-name">
												{review.name}
											</span>
											{review.badge && (
												<span class="reviewer-badge">
													{review.badge}
												</span>
											)}
										</div>
									</div>
									<div class="review-rating">
										{Array.from({
											length: review.rating,
										}).map(() => (
											<svg
												class="star-small"
												viewBox="0 0 24 24"
												fill="currentColor"
											>
												<polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
											</svg>
										))}
									</div>
									<p class="review-text">"{review.text}"</p>
									<span class="review-date">
										{review.date}
									</span>
								</div>
							))
						}
					</div>
				</div>

				<button
					class="carousel-btn carousel-btn-next"
					aria-label="Siguiente"
				>
					<svg
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
					>
						<path d="M9 18l6-6-6-6"></path>
					</svg>
				</button>
			</div>

			<div class="reviews-cta animate-on-scroll delay-3">
				<a
					href="https://share.google/VKtrhWdVcykgpXa2d"
					target="_blank"
					rel="noopener noreferrer"
					class="btn btn-outline"
				>
					Ver todas las reseñas en Google
					<svg
						class="btn-icon"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
					>
						<path
							d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
						></path>
						<polyline points="15 3 21 3 21 9"></polyline>
						<line x1="10" y1="14" x2="21" y2="3"></line>
					</svg>
				</a>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="cta-section">
		<div class="container">
			<div class="cta-content animate-on-scroll">
				<h2 class="cta-title">
					¿Listo para mejorar tus telecomunicaciones?
				</h2>
				<p class="cta-description">
					Contáctanos hoy y descubre cómo podemos ayudarte a optimizar
					tu conectividad empresarial.
				</p>
				<a href="/contacto" class="btn btn-primary">
					Solicitar información
					<svg
						class="btn-icon"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
					>
						<path d="M5 12h14M12 5l7 7-7 7"></path>
					</svg>
				</a>
			</div>
		</div>
	</section>
</Layout>

<script>
	// Carousel functionality
	const track = document.querySelector(".reviews-track") as HTMLElement;
	const prevBtn = document.querySelector(".carousel-btn-prev");
	const nextBtn = document.querySelector(".carousel-btn-next");
	const cards = document.querySelectorAll(".review-card");

	let currentIndex = 0;
	const cardWidth = 300 + 24; // card min-width + gap
	const visibleCards = Math.floor(
		(track?.parentElement?.offsetWidth || 900) / cardWidth,
	);
	const maxIndex = Math.max(0, cards.length - visibleCards);

	function updateCarousel() {
		if (track) {
			track.style.transform = `translateX(-${currentIndex * cardWidth}px)`;
		}
	}

	prevBtn?.addEventListener("click", () => {
		currentIndex = Math.max(0, currentIndex - 1);
		updateCarousel();
	});

	nextBtn?.addEventListener("click", () => {
		currentIndex = Math.min(maxIndex, currentIndex + 1);
		updateCarousel();
	});

	// Auto-scroll every 5 seconds
	setInterval(() => {
		currentIndex = currentIndex >= maxIndex ? 0 : currentIndex + 1;
		updateCarousel();
	}, 5000);
</script>
